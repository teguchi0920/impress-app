<header class="top-page-header">
  <div class="inner">
    <div class="nav">
      <div class="lists-left">
        <%= link_to "Impress-App", '#',class: "logo" %>
      </div>
      <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <%end %>
    </ul>
      </ul>
    </div>
  </div>
</header>

<%# メイン画面 %>

<div class="main">
  <%# 上部画面 %>
  <div class="main-top">
    <%= link_to "投稿する", new_book_path, class: 'post_button' %>
  </div>
  <%# 投稿一覧 %>
  <div class='book-contents'>
    <h2 class='title'>
      投稿一覧
    </h2>
    <ul class='book-lists'>
      <% @books.each do |book| %>
        <li class='list'>
          <%= link_to book_path(book.id) do %>
            <div class='book-img-content'>
            <% if book.image.present? %>
              <%= image_tag book.image, class: "book-img" %>
            <% else %>
              <%= image_tag "no-image.png", class: "book-img" %>
            <% end %>
            </div>
            <div class='book-info'>
              <h3 class='book-title'>
                <%= book.title %>
              </h3>
              <div class='book-impression'>
                <%= truncate(book.impress, length: 50) %>
              </div>
              <div class='book-category'>
                <%= book.book_category.name %>
              </div>
            </div>
          <% end %>
          <div class='favorite-btn'>
            <%= image_tag "heart.png", class: "favorite-icon", width: "35", height: "30" %>
            <div class='favorite-count'></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

